<resources xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.PlayLyst" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/transparent</item>

        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="actionBarTabTextStyle">@style/ActionBar</item>
        <item name="android:textColor">@color/dark_grey</item>

        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="materialButtonStyle">@style/CircularButtonStyle</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/purple_500</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_app_logo_white_animated</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/playlyst_brand_name</item>
        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.PlayLyst</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ActionBar">
        <item name="android:textColor">@color/purple_500</item>
    </style>

    <style name="BoldTextAppearance">
        <item name="android:fontFamily">@font/circular_black</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="chipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/circular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CircularTextAppearance">
        <item name="android:fontFamily">@font/circular_bold</item>
    </style>

    <style name="PlaceholerTextAppearance">
        <item name="android:fontFamily">@font/circular_black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextInputLayoutMine" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="hintTextAppearance">@style/CircularTextAppearance</item>
        <item name="errorTextAppearance">@style/CircularTextAppearance</item>
        <item name="placeholderTextAppearance">@style/PlaceholerTextAppearance</item>
        <item name="helperTextTextAppearance">@style/CircularTextAppearance</item>
        <item name="prefixTextAppearance">@style/PlaceholerTextAppearance</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxBackgroundColor">@color/transparent</item>
    </style>

    <!--<style name="App.Slider" parent="@style/Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/App.Tooltip</item>
    </style>

    <style name="App.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="android:textAppearance">@style/CircularTextAppearance</item>
    </style>-->

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="MaterialAlertDialog_rounded" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
        <item name="buttonBarNegativeButtonStyle">@style/CircularTextAppearance</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="AppTheme.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <!-- Override the background color of the Bottom Navigation -->
        <item name="android:background">@color/transparent</item>

        <!-- Override the color of the Bottom Navigation items -->
        <item name="itemIconTint">@color/dark_grey</item>

        <!-- Override the color of the Bottom Navigation item text -->
        <item name="itemTextColor">@color/dark_grey</item>

        <!-- Override the color of the Bottom Navigation selected item -->
        <item name="itemRippleColor">@color/purple_500</item>
        <item name="itemTextAppearance">@style/CircularTextAppearance</item>
    </style>

    <style name="ChipStyle" parent="Widget.Material3.Chip.Filter">
    </style>

    <style name="SwitchStyle" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <!-- TODO: Why is the switch so massive? try to make it smaller -->
    </style>

    <style name="CircularButtonStyle" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/circular</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>