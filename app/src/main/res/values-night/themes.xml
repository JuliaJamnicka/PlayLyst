<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlayLyst" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/purple_500</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_app_logo_white_animated</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/playlyst_brand_name</item>
        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.PlayLyst</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/black</item>
    </style>

    <style name="BoldTextAppearance">
        <item name="android:fontFamily">@font/circular_black</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="chipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/circular</item>
    </style>

    <style name="CircularTextAppearance">
        <item name="android:fontFamily">@font/circular_bold</item>
    </style>

    <style name="PlaceholerTextAppearance">
        <item name="android:fontFamily">@font/circular_black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextInputLayoutMine">
        <item name="hintTextAppearance">@style/CircularTextAppearance</item>
        <item name="placeholderTextAppearance">@style/PlaceholerTextAppearance</item>
        <item name="helperTextTextAppearance">@style/CircularTextAppearance</item>
        <item name="prefixTextAppearance">@style/PlaceholerTextAppearance</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxBackgroundColor">@color/transparent</item>
    </style>

</resources>